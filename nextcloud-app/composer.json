{
    "name": "aiquila/aiquila",
    "description": "AIquila - Claude AI Integration for Nextcloud",
    "type": "project",
    "license": "AGPL-3.0-or-later",
    "require": {
        "php": "^8.4",
        "anthropic-ai/sdk": "^0.5.0",
        "psr/log": "*",
        "symfony/http-client": "^8.0",
        "nyholm/psr7": "^1.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "OCA\\AIquila\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OCA\\AIquila\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
